<resources>

    <!-- Base application theme. -->
    <style name="Theme.CoinsTest" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:autoSizeMaxTextSize">18sp</item>
    </style>>

    <style name="Theme.CoinsTest.CommonTextView" parent="Theme.CoinsTest">
        <item name="fontFamily">roboto</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Theme.CoinsTest.TextView" parent="Theme.CoinsTest.CommonTextView">
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">34dp</item>
    </style>

    <style name="Theme.CoinsTest.Separator" parent="Theme.CoinsTest">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/line_separator</item>
    </style>


    <!--    <style name="IconOnlyButton" parent="Widget.MaterialComponents.Button.OutlinedButton">-->
    <!--        <item name="iconPadding">0dp</item>-->
    <!--        <item name="iconGravity">textStart</item>-->
    <!--    </style>-->

    <style name="Theme.CoinsTest.NumberPicker" parent="Theme.CoinsTest">
        <item name="colorControlNormal">#FFFFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFFFF</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="colorAccent">#FFFFFFFF</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColorPrimary">#C6C6C6</item>
        <item name="android:textColorAlertDialogListItem">#BABABA</item>
    </style>

</resources>
