<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.andysklyarov.finnotifyfree.ui.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.CurrencyFragment">

        <ImageView
            android:id="@+id/image_separator_1"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="12dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            style="@style/Theme.CoinsTest.TextView"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/set_alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            android:checked="@{viewModel.isServiceStarted}" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:scaleX="1.15"
            android:scaleY="1.15"
            android:theme="@style/Theme.CoinsTest.NumberPicker"
            android:timePickerMode="spinner"
            app:layout_constraintBottom_toTopOf="@+id/image_separator_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_1" />

        <ImageView
            android:id="@+id/image_separator_2"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="158dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_1" />

        <TextView
            android:id="@+id/text_top_limit"
            style="@style/Theme.CoinsTest.TextView"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/top_limit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput_top_limit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_marginEnd="48dp"
            android:inputType="numberDecimal"
            android:text="@{String.valueOf(viewModel.topLimit)}"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_top_limit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_top_limit" />

        <ImageView
            android:id="@+id/image_separator_3"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="12dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_top_limit" />

        <TextView
            android:id="@+id/text_bottom_limit"
            style="@style/Theme.CoinsTest.TextView"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/bottom_limit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_3" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput_bottom_limit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_marginEnd="48dp"
            android:inputType="numberDecimal"
            android:text="@{String.valueOf(viewModel.bottomLimit)}"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/text_bottom_limit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_bottom_limit" />

        <ImageView
            android:id="@+id/image_separator_4"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="12dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bottom_limit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>