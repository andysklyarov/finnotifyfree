<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.andysklyarov.finnotify.presentation.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.CurrencyFragment">

        <ImageView
            style="@style/Theme.CoinsTest.BackgroundImage"
            android:contentDescription="Background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/back_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="54dp"
            app:icon="@drawable/ic_close"
            app:iconGravity="start"
            app:iconPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/currency_name"
            style="@style/Theme.CoinsTest.CommonTextView"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="54dp"
            android:text="@{viewModel.nowCurrency.name}"
            android:textAlignment="center"
            android:textSize="32dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/image_separator_1"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="12dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/textView"
            style="@style/Theme.CoinsTest.TextView"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="Set alarm"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currency_name" />

        <Switch
            android:id="@+id/alarm_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView"
            android:checked="@{viewModel.isServiceStarted}" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:scaleX="1.15"
            android:scaleY="1.15"
            android:theme="@style/Theme.CoinsTest.NumberPicker"
            android:timePickerMode="spinner"
            app:layout_constraintBottom_toTopOf="@+id/image_separator_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_1" />

        <ImageView
            android:id="@+id/image_separator_2"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="158dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_1" />

        <TextView
            android:id="@+id/text_top_limit"
            style="@style/Theme.CoinsTest.TextView"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="Top limit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_2" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput_top_limit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_marginEnd="48dp"
            android:inputType="numberDecimal"
            android:text="@{viewModel.topLimit.toString()}"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_top_limit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_top_limit" />

        <ImageView
            android:id="@+id/image_separator_3"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="12dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_top_limit" />

        <TextView
            android:id="@+id/text_bottom_limit"
            style="@style/Theme.CoinsTest.TextView"
            android:layout_marginStart="48dp"
            android:layout_marginTop="12dp"
            android:text="Bottom limit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_separator_3" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInput_bottom_limit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="92dp"
            android:layout_height="64dp"
            android:layout_marginEnd="48dp"
            android:inputType="numberDecimal"
            android:text="@{viewModel.bottomLimit.toString()}"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_bottom_limit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_bottom_limit" />

        <ImageView
            android:id="@+id/image_separator_4"
            style="@style/Theme.CoinsTest.Separator"
            android:layout_marginTop="12dp"
            android:contentDescription="separator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bottom_limit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>